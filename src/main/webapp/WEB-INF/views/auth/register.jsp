<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>

<main class="page-section inner-page-sec-padding-bottom" style="margin-top: 50px;">
	<div class="container">
		<div class="row justify-content-md-center">
			<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
				<!-- Login Form s-->
				<form action="#">
					<div class="login-form">
						<h4 class="login-title">Đăng Ký</h4>
						<div class="row">
							<div class="col-md-12 col-12 mb--15">
								<label for="email">Tên đầy đủ</label> <input
									class="mb-0 form-control" type="text" id="name"
									placeholder="Nhập tên đầy đủ của bạn">
							</div>
							<div class="col-12 mb--20">
								<label for="email">Email</label> <input
									class="mb-0 form-control" type="email" id="email"
									placeholder="Nhập email của bạn">
							</div>
							<div class="col-lg-6 mb--20">
								<label for="password">Mật khẩu</label> <input
									class="mb-0 form-control" type="password" id="password"
									placeholder="Nhập mật khẩu của bạn">
							</div>
							<div class="col-lg-6 mb--20">
								<label for="password">Nhập lại mật khẩu</label> <input
									class="mb-0 form-control" type="password" id="repeat-password"
									placeholder="Nhập lại mật khẩu của bạn">
							</div>
							<div class="col-md-12">
								<a href="#" class="btn btn-outlined">Đăng Ký</a>
							</div>
						</div>
					</div>
				</form>
			</div>
			
		</div>
	</div>
</main>